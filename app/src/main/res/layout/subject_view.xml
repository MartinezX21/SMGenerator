<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp">


    <ImageView
        android:id="@+id/subject_view_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="295dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496"
        app:srcCompat="@color/colorPrimary" />

    <TextView
        android:id="@+id/subject_view_indicator"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:capitalize="characters"
        android:text="H"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/subject_view_image"
        app:layout_constraintEnd_toEndOf="@+id/subject_view_image"
        app:layout_constraintStart_toStartOf="@+id/subject_view_image"
        app:layout_constraintTop_toTopOf="@+id/subject_view_image" />

    <TextView
        android:id="@+id/subject_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:paddingTop="0dp"
        android:text="Name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/subject_view_image"
        app:layout_constraintTop_toTopOf="@+id/subject_view_image"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/subject_view_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:minLines="1"
        android:text="Description"
        app:layout_constraintStart_toEndOf="@+id/subject_view_image"
        app:layout_constraintTop_toBottomOf="@+id/subject_view_name" />

    <TextView
        android:id="@+id/subject_view_hierarchy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="hierarchie"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/subject_view_image"
        app:layout_constraintTop_toBottomOf="@+id/subject_view_description" />

    <CheckBox
        android:id="@+id/subject_view_interested_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:checked="false"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>